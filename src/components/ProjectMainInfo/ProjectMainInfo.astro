---
import * as Icon from "@astropub/icons";
import Button from "components/Button/Button.astro";

export interface Props {
  name: string;
  videoSrc: string;
  website: string;
  github: string;
}

const { name, videoSrc, website, github } = Astro.props as Props;
---

<div class="flex flex-col max-w-full w-full">
  <a href="/" class="w-fit">
    <Icon.ArrowLeft size="55" class="animation" title="" />
  </a>
  <div
    class="flex flex-col self-center items-center max-w-[1200px] w-full mt-16"
  >
    <h1 class="self-start font-medium text-3xl sm:text-4xl md:text-5xl mb-8">
      {name}
    </h1>
    <div class="flex flex-col items-end gap-8 px-1 md:px-3">
      <video width="1000px" autoplay muted loop>
        <source type="video/mp4" src={videoSrc} />
      </video>
      <div class="flex gap-4">
        <Button href={website} text="Visit site" target="_blank" />
        <Button href={github} text="Github" target="_blank" />
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes slide {
    0%,
    100% {
      transform: translate(0, 0);
    }

    50% {
      transform: translate(-5px, 0);
    }
  }
  .animation:hover {
    animation: slide 1s ease-in-out infinite;
  }
</style>
